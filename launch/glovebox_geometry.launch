<launch>
  <node
    name    = "camera_position_publisher"  
    pkg     = "tf"
    type    = "static_transform_publisher"
    args    = "0.53 -0.03 0.64  1.57079632679 0.42 0  world camera_link 100"

    respawn = "true"
    output  = "screen"
  />

  <node
    name    = "$(anon sixdof_min_x)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_min_x 0.15"

    respawn = "false"
    output  = "screen"
  />

  <node
    name    = "$(anon sixdof_max_x)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_max_x 1.4"

    respawn = "false"
    output  = "screen"
  />

  <node
    name    = "$(anon sixdof_min_y)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_min_y 0.5"

    respawn = "false"
    output  = "screen"
  />
  

  <node
    name    = "$(anon sixdof_max_y)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_max_y 1.35"

    respawn = "false"
    output  = "screen"
  />
  
  <node
    name    = "$(anon sixdof_min_z)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_min_z 0"

    respawn = "false"
    output  = "screen"
  />
  
  <node
    name    = "$(anon sixdof_max_z)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_max_z 1"

    respawn = "false"
    output  = "screen"
  />
    
</launch>
