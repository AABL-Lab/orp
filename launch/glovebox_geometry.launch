<launch>
  <node
    name    = "static_transform_publisher"  
    pkg     = "tf"
    type    = "static_transform_publisher"
    args    = "-1.085 0.65 0.20 0 0.8 0 world camera_link 100-"

    respawn = "true"
    output  = "screen"
  />

  <node
    name    = "$(anon sixdof)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_min_y 0.2"

    respawn = "false"
    output  = "screen"
  />

  <node
    name    = "$(anon sixdof2)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation spatial_max_y 1.5"

    respawn = "false"
    output  = "screen"
  />

  <node
    name    = "$(anon sixdof4)"
    pkg     = "dynamic_reconfigure"
    type    = "dynparam"
    args    = "set segmentation percentage_to_analyze 0.5"

    respawn = "false"
    output  = "screen"
  />
</launch>